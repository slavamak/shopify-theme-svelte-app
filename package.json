{
  "name": "shopify-theme-svelte-app",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "dev": "wireit",
    "fmt": "prettier --check .",
    "lint": "eslint",
    "shopify:pull": "wireit",
    "shopify:push": "wireit"
  },
  "packageManager": "pnpm@9.15.3",
  "wireit": {
    "build": {
      "command": "vite build",
      "env": {
        "NODE": "production"
      }
    },
    "dev": {
      "command": "vite build --mode dev --watch",
      "service": true,
      "env": {
        "NODE": "development"
      },
      "dependencies": [
        "dev:shopify"
      ]
    },
    "shopify:push": {
      "command": "shopify theme push",
      "env": {
        "SHOPIFY_FLAG_STORE": "slavamak-sandbox"
      }
    },
    "shopify:pull": {
      "command": "shopify theme pull",
      "env": {
        "SHOPIFY_FLAG_STORE": "slavamak-sandbox"
      }
    },
    "dev:shopify": {
      "command": "shopify theme dev",
      "service": true,
      "env": {
        "SHOPIFY_FLAG_STORE": "slavamak-sandbox",
        "SHOPIFY_FLAG_STORE_PASSWORD": "rahlah"
      }
    }
  },
  "dependencies": {
    "svelte": "^5.17.3"
  },
  "devDependencies": {
    "@shopify/prettier-plugin-liquid": "^1.6.3",
    "@slavamak/eslint-config": "^1.2.2",
    "@slavamak/tsconfig": "^1.3.1",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@types/node": "^22.10.5",
    "eslint": "^9.18.0",
    "jiti": "^2.4.2",
    "prettier": "^3.4.2",
    "vite": "^6.0.7",
    "wireit": "^0.14.9"
  }
}
